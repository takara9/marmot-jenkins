###
### ノードのリストとアクセス方法
###

master      ansible_connection=local

# for KVM
node1       ansible_ssh_host=jworker1  ansible_ssh_private_key_file=/root/.ssh/id_rsa
node2       ansible_ssh_host=jworker2  ansible_ssh_private_key_file=/root/.ssh/id_rsa

[jagents]
jworker[1:2]


###
### プレイブックに与える変数
###
[all:vars]

home_path = /var/lib/jenkins/.ssh

# for KVM
dir_ssh = /root/.ssh
cluster_admin = ubuntu



