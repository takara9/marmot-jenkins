###
### ノードのリストとアクセス方法
###

jenkins     ansible_connection=local
jworker1   ansible_connection=local
jworker2   ansible_connection=local

# for KVM
#jworker1    ansible_ssh_host=jworker1  ansible_ssh_private_key_file=/root/.ssh/id_rsa
#jworker2    ansible_ssh_host=jworker2  ansible_ssh_private_key_file=/root/.ssh/id_rsa

[jagents]
jworker[1:2]


###
### プレイブックに与える変数
###
[all:vars]

# for Vagrant
dir_ssh   = /vagrant/keys
home_path = /var/lib/jenkins/.ssh

# for KVM
dir_ssh = /root/.ssh



